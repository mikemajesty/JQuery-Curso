@{
    ViewBag.Title = "Exibiresconderlinhas";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<h2 class="well">Exibir esconder linhas</h2>

<div id="d1">

    <table class="table">
        <thead>
            <tr>
                <th>Month</th>
                <th>Savings</th>
            </tr>
        </thead>
        <tbody>
            <tr class="divisor">
                <th colspan='2'>
                    Gastos domesticos
                </th>
            </tr>
            <tr>
                <td>January</td>
                <td>$100</td>
            </tr>
            <tr>
                <td>February</td>
                <td>$80</td>
            </tr>
            <tr>
                <td>March</td>
                <td>$803</td>
            </tr>
        </tbody>
        <tbody>
            <tr class="divisor">
                <th colspan='2'>
                    Gastos com carro
                </th>
            </tr>
            <tr>
                <td>April</td>
                <td>$90</td>
            </tr>
            <tr>
                <td>June</td>
                <td>$90</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>Total</td>
                <td>$1500</td>
            </tr>
        </tfoot>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('table tr:odd').addClass('impar');
        $('table tr:even').addClass('par');
        
        $('.divisor th').prepend('<img src="/Source/mais.png"/>');
        //<img src="~/Source/menos.jpg" />
        $('tbody tr:not(.divisor)').hide();
        $('img').click(function () {
            if ($(this).attr('src') == '/Source/mais.png') {
                $(this).attr('src', '/Source/menos.jpg');
                $(this).parents().siblings('tr').show();
            } else {
                $(this).attr('src', '/Source/mais.png');
                $(this).parents().siblings('tr').hide();
            }
        });
    });
</script>
<style type="text/css">

    body {
        font-family: Segoe UI;
        font-size: 12pt;
    }

    .par {
        background-color: gray;
    }

    .impar {
        background-color: black;
        color: white;
    }

    .hover {
        font-weight: bold;
        background-color: white;
        color: black;
    }

    .tooltip {
        width: auto;
        font-size: 14px;
        text-align: center;
        color: black;
        background-color: gray;
        border: 4px solid rgb(255, 255, 255);
        border-radius: 5px;
        float: right;
    }

    .divisor {
        background-color: orange;
    }

        .divisor img {
            height: 20px;
            cursor: pointer;
        }
</style>

