            </tr>
            <tr>
                <td>February</td>
                <td>$80</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {

        $('table thead tr th').prepend('+').css('cursor', 'pointer');

        $('table thead tr th').each(function (i) {
            var nomeColuna = $(this).text();
           
            $('td:nth-child(' + (i + 1) + ')').hover(

               function () {
                   var nomeCelula = $(this).text();
                   //adiciona um tooltip na tebela com suas informações
                    $(this).addClass('hover').prepend('<span class="tooltips">Coluna: '+nomeColuna+'<br/>Celula: '+nomeCelula+'</span>');
                   //busca um valor igual quando clicado
                    $(this).click(function () {
                        $('tr, td').removeClass('hover');
                        $('.tooltips').remove();
                        $('tr:contains(' + nomeCelula + ')').addClass('hover');
                    });
               }, function () {
                   $(this).removeClass('hover');
                   $('.tooltips').remove();
               });

           
        });


    });
</script>
<style type="text/css">

    .tooltips {
        width: auto;
        font-size: 14pt;
        text-align: center;
        color: rgb(255,255,255);
        border: 4px solid rgb(255,255,255);
        border-radius: 5px;
        float:right;
